<h1>{blog.title}</h1>
{if ~isempty(posts)}
<section >
{for i=1:numel(posts)}
  <article>
    <header>
      <h1>{posts{i}.title}</h1>
      <p >{posts{i}.author}</p>
    </header>
    <p >{for tag=posts{i}.tags}{tag} {end}</p>
    <div>{posts{i}.content}</div>
    {!
    <div>Commented-out section</div>
    !}
  </article>
  {for comment=posts{i}.comments}
    {>commentSection}
  {end}
  {if isfield(posts{i}.comments)}
  <p>No comments have yet been made.</p>
  {end}
  {>addComment}
{end}
</section>
{end}
{if isempty(posts)}
<p>No posts!</p>
{end}