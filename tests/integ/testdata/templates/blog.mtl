<h1>{blog.title}</h1>
{if ~isempty(posts)}
    <section id="posts">
        {for post=posts}
            <article>
                <header>
                    <h1>{post.title}</h1>
                    <p class="by">{post.author}</p>
                </header>
                <p class="tags">{for tag=string(post.tags)}{tag} {end}</p>
                <div>{post.content}</div>
                {%
                <div>Commented-out section</div>
                %}
            </article>
            {if numel(post.comments)>0}
                {for comment=post.comments}
                    {>commentSection}
                {end}
            {end}
            {if numel(post.comments)==0}
                <p>No comments have yet been made.</p>
            {end}
            {>addComment}
        {end}
    </section>
{end}
{if isempty(posts)}
    <p>No posts!</p>
{end}